package com.uiAutomation.Flipkart.uiAction;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.How;
import org.openqa.selenium.support.PageFactory;

import com.uiAutomation.Flipkart.TestBase.HelperUtility;

public class TestPage_uiPage extends HelperUtility{
	
	public TestPage_uiPage(WebDriver driver){
		this.driver=driver;
		PageFactory.initElements(driver, this.getClass());
	}
	
	@FindBy(how=How.LINK_TEXT, using ="/account/login?ret=/")
	WebElement loginLink;
	@FindBy(how=How.XPATH, using ="//span[contains(text(),'Enter Email/Mobile number')]")
	WebElement enterEmail;
	@FindBy(how=How.XPATH, using ="//span[contains(text(),'Enter Password')]")
	WebElement enterPassword;
	@FindBy(how=How.XPATH, using ="//span[contains(text(),'Forgot?')]")
	WebElement forgotPassword;
	
	
	
	//span[contains(text(),'Enter Email/Mobile number')]
	public void loginToFlipkart(){
		
	}

}
