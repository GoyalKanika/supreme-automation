package com.uiAutomation.Flipkart.TestBase;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

public class HelperUtility {

	public WebDriver driver;
	
	String browser;
	String URL;
	
	public void launchBrowser(){
		
	}
	
	public void getBrowser(String browser){
		
		if(browser.equalsIgnoreCase("chrome")){
			System.setProperty("webdriver.chrome.driver","C://Program Files (x86)//eclipse/Webdriver//chromedriver.exe");
			driver = new ChromeDriver();
		}
		else if(browser.equalsIgnoreCase("firefox")){
			driver = new FirefoxDriver();
		}
		else if(browser.equalsIgnoreCase("internet explorer")){
			System.setProperty("webdriver.ie.driver","C://Program Files (x86)//eclipse/Webdriver//webdriver.ie.driver.exe");
			driver = new InternetExplorerDriver();
		}
		
	}
	
	public void getURL(){
		
	}
	
}
